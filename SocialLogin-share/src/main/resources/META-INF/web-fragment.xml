<web-fragment>

    <filter>
        <description>Share Oauth2 authentication support filter.</description>
        <filter-name>Oauth2 Authentication Filter</filter-name>
        <filter-class>org.springframework.extensions.webscripts.servlet.BeanProxyFilter</filter-class>
        <init-param>
            <param-name>beanName</param-name>
            <param-value>oauth2AuthenticationFilter</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Oauth2 Authentication Filter</filter-name>
        <url-pattern>/page/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Oauth2 Authentication Filter</filter-name>
        <url-pattern>/p/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Oauth2 Authentication Filter</filter-name>
        <url-pattern>/proxy/*</url-pattern>
    </filter-mapping>

    <!--<filter-mapping>-->
        <!--<filter-name>Oauth2 Authentication Filter</filter-name>-->
        <!--<url-pattern>/service/*</url-pattern>-->
    <!--</filter-mapping>-->

</web-fragment>